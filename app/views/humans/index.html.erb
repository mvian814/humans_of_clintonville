



<html>
  <head>
    <meta charset="utf-8">
      <title>Humans & Dogs & Cats</title>
        <!-- <link rel="stylesheet" href="assets/stylesheets/application.css"> -->
        <%= stylesheet_link_tag "application.css" %>
        <link href="https://fonts.googleapis.com/css?family=Raleway|Roboto" rel="stylesheet">
  </head>


<body>
  <ul class="navbar">
      <li> <a href="./" >Home</a> </li>
      <li> <a href="The Humans" >The Humans</a></li>
      <li> <a href="./dogs/" >The Dogs</a></li>
      <li> <a href="The Cats" >The Cats</a></li>
      <div class="clearfix" ></div>
      <div class="clearfix" ></div>
  </ul>



  <div class="container">
    <h1>Clintonville Humans and Their Dogs & Cats</h1>



      <% @humans.each do |human| %>
    <div class="row">
      <div class="col big-box">
        <%= image_tag "human.jpg", alt: "Default Human Image", height: '150px' %>
            <h3>Human: <%= human.full_name %></h3>
            <h3>Address: <%= human.address %></h3>
            <h3>Age: <%= human.age %> years old </h3>


      </div>

      <div class="col">
        <div class="row">
          <div class="col mini-box">
            <% human.dogs.each do |dog| %>
            <%= image_tag "dog.png", alt: "Default Dog Image", height: '50px' %>
            <p>Name: <%= dog.name %></p>
            <p>Breed: <%= dog.breed %></p>
            <p>Weight: <%= dog.weight %> lbs </p>
            <p>Age: <%= dog.age %> years old</p>
            <% end %>
          </div>

          <div class="col mini-box">
            cat 2 top right
            <%= image_tag "cat_lick_paw.png", alt: "Default Dog Image", height: '50px' %>
          </div>
        </div>


      </div>



    </div>

    <% end %>

  </div>

</body>
